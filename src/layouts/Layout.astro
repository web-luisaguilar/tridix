---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="/favicon-dark.ico" type="image/x-icon">   
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
    <header>
    <h1 class="text-center text-4xl font-black pt-4">TriDix</h1>
    <h2 class="upercase text-center text-sm font-semibold pb-4">Imprime lo que quieras</h2>
  </header>
		<slot />
    <footer class="bg-[var(--color-on-surface)] text-white py-16">
      <section class="px-4 flex flex-col items-center">
        <h2 class="font-bold uppercase text-center  text-lg py-4">Redes Sociales</h2>
        <a href="https://www.instagram.com/tridix.3d/" target="_blank" rel="noreferrer noopener"  class="text-[var(--color-primary)] hover:text-white/80 duration-200 active:text-[var(--color-primary)]" >
          <svg  width="50"  height="50"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-brand-instagram"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M4 4m0 4a4 4 0 0 1 4 -4h8a4 4 0 0 1 4 4v8a4 4 0 0 1 -4 4h-8a4 4 0 0 1 -4 -4z" /><path d="M12 12m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0" /><path d="M16.5 7.5l0 .01" /></svg>
        </a>

      </section>
      <section class="px-4 flex flex-col items-center">
        <h2 class="font-bold uppercase text-center  text-lg py-4">Patrocinadores</h2>
        <a class='font-semibold hover:font-black hover:text-white active:text-[var(--color-primary)] text-base text-[var(--color-primary)] text-center  duration-200' href="https://cuantumcode.netlify.app" target="_blank" rel="noreferrer noopener"  >CuantumCode</a>
        <a class='font-semibold hover:font-black hover:text-white active:text-[var(--color-primary)] text-base text-[var(--color-primary)] text-center  duration-200' href="https://www.facebook.com/OnlineTecnoAyuda" target="_blank" rel="noreferrer noopener"  >TecnoAyuda</a>
        <a class='font-semibold hover:font-black hover:text-white active:text-[var(--color-primary)] text-base text-[var(--color-primary)] text-center  duration-200' href="https://luisaguilar.netlify.app" target="_blank" rel="noreferrer noopener"  >LuisAguilar</a>
      </section>
    </footer>
	</body>
</html>
<style is:global>
	:root {
		--color-primary: #4d8dc5;
    --color-surface: #faece4;
    --color-on-surface:#151515;
	}
	html {
		font-family: system-ui, sans-serif;
		background: var(--color-surface);
    color:var(--color-on-surface)
	}
  * {
  margin: 0;
  padding: 0;
}
*,
*:after,
*::before {
  box-sizing: border-box;
}
img{
  max-width: none;
}
</style>
